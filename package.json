  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --stream",
    "flow": "lerna run flow"
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.14",
    "lerna": "^3.4.0",
    "lint-staged": "^7.2.2",
